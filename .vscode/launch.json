    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug SoundVitrine",
            "type": "chrome",
            "request": "launch",
            "postDebugTask": "Shutdown debug stack",
            "url": "http://127.0.0.1",
            "webRoot": "${workspaceFolder}",
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 2
            }
        },
        {
            "name": "Track Stack",
            "type": "node-terminal",
            "request": "launch",
            "command": "docker compose -f docker-compose.debug.yml logs -f",
            "cwd": "${workspaceFolder}/soundsuite_debug",
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 1
            }
        }
    ],
    "compounds": [
        {
            "name": "Debug Full stack",
            "configurations": [
                "Debug SoundVitrine",
                "Track Stack"
            ],
            "preLaunchTask": "Run debug stack",
            "stopAll": true
        }
    ]
}