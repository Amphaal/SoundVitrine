    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://127.0.0.1",

            "webRoot": "${workspaceFolder}",
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 2
            },
            "cascadeTerminateToConfigurations": ["Track stack logs"]
        },
        {
            "name": "Track stack logs",
            "type": "node-terminal",
            "request": "launch",
            "command": "docker compose -f docker-compose.debug.yml logs -f",
            "cwd": "${workspaceFolder}/soundsuite_debug",
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 1
            },
            "serverReadyAction": {
                "action": "startDebugging",
                "pattern": "swoole entered RUNNING state",  
                "name": "Launch Chrome",
                "killOnServerStop": false
            },
            "cascadeTerminateToConfigurations": ["Launch Chrome"]
        }
    ],
    "compounds": [
        {
            "name": "Debug Full stack",
            "configurations": [
                "Track stack logs"
            ],
            "preLaunchTask": "Run debug stack",
            "postDebugTask": "Shutdown debug stack",
            "stopAll": true
        }
    ]
}