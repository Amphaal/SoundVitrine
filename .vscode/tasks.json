{
  "version": "2.0.0",
  "tasks": [
    ///
    /// Dev Deps
    ///
    {
      "label": "0. Install Dev Prerequisites (requires admin privileges)",
      "windows": {
        // make sure to install Chocolatey beforehand (https://docs.chocolatey.org/en-us/choco/setup/)
        "command": "choco install -y php composer",
      },
      "problemMatcher": []
    },
    {
      "label": "1. Install Composer dev dependencies",
      "command": "composer install",
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "problemMatcher": []
    },
  ]
}