{
	"version": "2.0.0",
	"tasks": [
    {
      "label": "Shutdown debug stack",
      "command": "docker",
      "args": ["compose", "-f", "docker-compose.debug.yml", "down", "-v"],
      "problemMatcher": []
    },
    {
      "label": "Run debug stack",
      "command": "docker",
      "args": ["compose", "-f", "docker-compose.debug.yml", "up", "-d", "--wait"],
      "problemMatcher": []
    },
    {
      "label": "Install Swoole helper",
      "command": "composer require swoole/ide-helper --dev",
      "problemMatcher": []
    }
  ]
}